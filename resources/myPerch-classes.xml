    <class name="tile">
	<perchObject>

               	<position input="tilePos">Point(0,0,0)</position>
		<content>
				<image name="ttile">
					<!--name input="tileName">tile_name</name-->
					<file>images/box-01.png</file>
					<scale>Point( 1,1,1 )</scale>

					<show start_scale="Point( 0,0,1 )" scale="Point( 1,1,1 )" start_alpha="1" alpha="1" repeat="pingpong" numRepeat="0" duration=".5" function="sinusInOutFunc" />
					<hide start_scale="Point(1,1,1)" scale="Point( 0.0,0.0,1 )" alpha="1" repeat="none" duration=".5" function="sinusInOutFunc" />
<!--					<show start_scale="Point( .85,.85,1 )" scale="Point( 1,1,1 )" start_alpha="1" alpha="1" repeat="pingpong" numRepeat="0" duration="1" function="sinusInOutFunc" />
					<hide start_scale="Point(1,1,1)" scale="Point( 0.85,0.85,1 )" alpha="1" repeat="none" duration=".8" function="sinusInOutFunc" />
-->
				</image>

			<sensingArea input="sensing">rect(0,0,100,100)</sensingArea>
		</content>

                <event type="onInit">
			<python file="script.py" function="debug" args="5">ttile</python>
                        <hide>ttile</hide>
                        <show>ttile</show>
                </event>

                <event type="onPresent" >
			<hide>ttile</hide>
                </event>

                <event type="onNotPresent" >
			<show>ttile</show>
                </event>

	</perchObject>
    </class>


    <!--  video content switcher  -->
    <class name="videoSwitcher">
		
		<perchObject>

			<position input="switch_position">Point(0,0,0)</position>
			<content>
                
                <image name="video_shadow">
                    <file>images/video_shadow_lrg.png</file>
                    <position>Point(15,17,0)</position>
                     <scale>Point(1,1,1)</scale>
                </image>

                <perchGroup name="content1">
                    <video name="video" loop="regular" autoplay="1">
                        <file input="video_file">videos/sxsw/dos.mov</file>
                        <position>Point(0,0,0)</position>
                         <scale>Point(1,1,1)</scale>
                    </video>
                </perchGroup>
                
                <perchGroup name="content2">
                    <video name="video" loop="regular" autoplay="1">
                        <file input="video_file">images/product_1/videos/2.mov</file>
                        <position>Point(0,0,0)</position>
                        <scale>Point(1,1,1)</scale>
                    </video>
                </perchGroup>
                
                <perchGroup name="content3">
                    <video name="video" loop="regular" autoplay="1">
                        <file input="video_file">images/product_1/videos/3.mov</file>
                        <position>Point(0,0,0)</position>
                         <scale>Point(1,1,1)</scale>
                    </video>
                </perchGroup>

